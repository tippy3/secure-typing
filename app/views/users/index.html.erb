<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Admin</th>
        <th scope="col">Swapfont</th>
        <th scope="col">Created</th>
        <th scope="col">Updated</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.name %></td>
          <td><%= user.admin if user.admin %></td>
          <td><%= user.font.swapfont %></td>
          <td><%= user.created_at.strftime("%Y.%m.%d %H:%M") %></td>
          <td><%= user.updated_at.strftime("%Y.%m.%d %H:%M") if user.created_at != user.updated_at %></td>
          <td>
            <%= link_to "/admin/users/#{user.id}" do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </td>
          <td>
            <% if !user.admin %>
              <%= link_to "/admin/users/#{user.id}/destroy", method: :post, data: {confirm: 'Are you sure?'} do %>
                <i class="fas fa-trash"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
      <% if @users.empty? %>
        <td>No Data</td>
      <% end %>
    </tbody>
  </table>
</div>
